@model List<BlogListModel>
@if (ViewBag.ActiveCategory!=null)
{
   <div class="border border-dark p-3">
       Şu anda aktif kategori  id si @ViewBag.ActiveCategory olan blogları görüyorsunuz..<a asp-action="Index">Filtreyi kaldır</a>
   </div>
}
@foreach (var blog in Model)
{
<div class="card mb-4">
      <getblogimage id="@blog.Id"></getblogimage>  
    <div class="card-body">
        <h2 class="card-title">@blog.Title</h2>
        <p class="card-text">@blog.ShortDescription</p>
        <a asp-action="BlogDetail" asp-route-id="@blog.Id" class="btn btn-primary">Read More &rarr;</a>
    </div>
    <div class="card-footer text-muted">
        Posted on @blog.ReleaseTime.ToLongDateString()

    </div>
</div>
 }

